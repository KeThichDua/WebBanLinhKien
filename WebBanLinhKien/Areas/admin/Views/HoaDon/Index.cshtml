@model IEnumerable<WebBanLinhKien.Areas.admin.Models.HoaDonModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

<h2>Danh sách hóa đơn</h2>

<table class="table">
    <tr>
        <th>
            Mã hóa đơn
        </th>
        <th>
            Ngày đặt 
        </th>
        <th>
            Ngày ship
        </th>
        <th>
            Mã khách hàng
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Ma_hd)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ngay_dat)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ngay_ship)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ma_kh)
        </td>
        <td>
            @Html.ActionLink("Xóa", "Delete", new { id=item.id })
        </td>
    </tr>
}

</table>
