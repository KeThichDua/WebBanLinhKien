@model IEnumerable<WebBanLinhKien.Areas.admin.Models.PhieuNhapModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

<h2>Danh sách phiếu nhập</h2>

<p>
    @Html.ActionLink("Tạo phiếu nhập mới", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Mã phiếu nhập
        </th>
        <th>
            Ngày nhập
        </th>
        <th>
            Mã nhà cung cấp
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Ma_pn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NgayNhap)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ma_ncc)
            </td>
            <td>
                @Html.ActionLink("Sửa", "Edit", new { id = item.id }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.id })
            </td>
        </tr>
    }
    <tr>
        <td>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        </td>
    </tr>
</table>
