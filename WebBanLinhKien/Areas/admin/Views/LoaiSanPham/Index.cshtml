@model IEnumerable<WebBanLinhKien.Areas.admin.Models.LoaiSanPhamModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

<h2>Danh sách loại SP</h2>

<p>
    @Html.ActionLink("Tạo loại sản phẩm mới", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Mã loại sản phẩm
        </th>
        <th>
            Tên loại
        </th>
        <th>
            Mô tả
        </th>
        <th>
            Url ảnh
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MaLoaiSP)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ten_loai)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mo_ta)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Url_anh)
            </td>
            <td>
                @Html.ActionLink("Sửa", "Edit", new { id = item.id }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.id })
            </td>
        </tr>
    }
    <tr>
        <td>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        </td>
    </tr>

</table>
